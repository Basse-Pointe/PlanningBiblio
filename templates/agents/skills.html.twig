{# agents/skills.html.twig #}

<table style='width:90%;'>
  <tr style='vertical-align:top;'>
    <td>
      <b>Activités disponibles</b><br/>
      <div id='dispo_div'>
        <ul>
          {% for elem in postes_dispo %}
            <li>{{ elem[1] | raw }}</li>
          {% endfor %}
        </ul>
      </div>
    </td>

    <td>
      <b>Activités attribu&eacute;es</b><br/>
      <div id='attrib_div'>
        <ul>
          {% for elem in postes_attribues %}
            <li>{{ elem[1] | raw }}</li>
          {% endfor %}
        </ul>
      </div>

      <input type='hidden' name='postes' id='postes' value="{{ postes }}"/>
    </td>
  </tr>
</table>